<div class="container">

    <div class="row "> 
        <div class="login col-lg-6 col-lg-offset-3 col-sm-6 col-sm-offset-3">
            <form class="form-horizontal " {{action login on="submit"}}>
                <legend>Login </legend>
                <div class="form-group">
                   <label class="control-label col-lg-2 col-sm-3">Username:</label>
                   <div class="col-lg-10 col-sm-9">
                      {{input value=username class="form-control" type="text" placeholder="Username"}}
                   </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-lg-2 col-sm-3">Password:</label>
                    <div class="col-lg-10 col-sm-9">
                        {{input value=password class="form-control" type="password" placeholder="Password"}}
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-offset-2 col-sm-offset-3 col-lg-10 col-sm-9">
                        <div class="btn btn-primary" value="Log in" {{action "login"}}>Log in</div>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div> <!-- /container -->